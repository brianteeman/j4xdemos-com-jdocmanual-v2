<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="language" label="COM_JDOCMANUAL_GFMFILE_DETAILS_TAB">

		<field
			name="display_title"
			type="text"
			label="COM_JDOCMANUAL_GFM_DISPLAY_TITLE_LABEL"
			required="true"
		 />

		<field
			name="jdoc_key"
			type="text"
			label="COM_JDOCMANUAL_GFM_INDEX_KEY"
			required="true"
			class="readonly"
			readonly="true"
		 />

		<field
			name="path"
			type="text"
			label="COM_JDOCMANUAL_GFM_PATH"
			required="true"
			class="readonly"
			readonly="true"
		/>

		<field
			name="filename"
			type="text"
			label="COM_JDOCMANUAL_GFM_FILENAME"
			required="true"
			class="readonly"
			readonly="true"
		/>

		<field
			name="id"
			type="text"
			label="COM_JDOCMANUAL_GFMFILE_STASH_ID"
			class="readonly"
			default="0"
			readonly="true"
		/>

		<field
			name="page_id"
			type="text"
			label="COM_JDOCMANUAL_GFMFILE_PAGE_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

		<field
			name="source"
			type="textarea"
			label="COM_JDOCMANUAL_GFMFILE_SOURCE_LABEL"
			class="mdsource"
			hidden="true"
			rows="18"
			readonly="readonly"
		/>

		<field
			name="commit_message"
			type="text"
			label="COM_JDOCMANUAL_GFMFILE_COMMIT_MESSAGE_LABEL"
		/>

		<field
			name="comments"
			type="textarea"
			label="COM_JDOCMANUAL_GFMFILE_COMMENTS_LABEL"
			rows="10"
		/>

		<field
			name="markdown_text"
			type="textarea"
			label="COM_JDOCMANUAL_GFMFILE_STASH_LABEL"
			class="mdsource"
			hidden="true"
			rows="18"
			filter="JComponentHelper::filterText"
		/>

		<field
			name="language"
			type="hidden"
		/>

	</fieldset>

</form>
