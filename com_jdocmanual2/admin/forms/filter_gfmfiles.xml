<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="J4xdemos\Component\Jdocmanual\Administrator\Field">
	<fields name="filter">
		<field
			name="state"
			type="list"
			label="JSTATUS"
			onchange="this.form.submit();"
			>
			<option value="">COM_JDOCMANUAL_GFM_STATUS_ALL</option>
			<option value="0">COM_JDOCMANUAL_GFM_FREE</option>
			<option value="1">COM_JDOCMANUAL_GFM_STASHED</option>
			<option value="0">COM_JDOCMANUAL_GFM_PR_PENDING</option>
		</field>

		<field
			name="language"
			type="list"
			label="COM_JDOCMANUAL_JDOCMANUAL_LANGUAGE_SELECT"
			onchange="this.form.submit();"
			default="en"
			>
			<option value="">COM_JDOCMANUAL_JDOCMANUAL_LANGUAGE_SELECT</option>
			<option value="de">de</option>
			<option value="en">en</option>
			<option value="fr">fr</option>
			<option value="nl">nl</option>
		</field>

		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_JDOCMANUAL_SOURCES_FILTER_SEARCH_LABEL"
			description="COM_JDOCMANUAL_SOURCES_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			statuses="*,0,1,2,-2"
			onchange="this.form.submit();"
			default="a.path ASC, a.filename ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.path ASC, a.filename ASC">COM_JDOCMANUAL_GFM_PATH_AND_FILENAME_ASC</option>
			<option value="a.jdoc_key ASC">COM_JDOCMANUAL_GFM_INDEX_KEY_ASC</option>
			<option value="a.jdoc_key DESC">COM_JDOCMANUAL_GFM_INDEX_KEY_DESC</option>
			<option value="a.path ASC">COM_JDOCMANUAL_GFM_PATH_ASC</option>
			<option value="a.path DESC">COM_JDOCMANUAL_GFM_PATH_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
